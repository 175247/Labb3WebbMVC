@model Labb3WebbMVC.Models.Movie

<br />
    <iframe class="trailerFrame" src="@Model.TrailerURL" allow="accelerometer;" allowfullscreen></iframe>
    <div class="movieInfo">
        <h1>
            @Html.DisplayFor(modelItem => modelItem.Title)
            <span id="movieRating">Rating: @Html.DisplayFor(modelItem => modelItem.Rating)</span>
        </h1>
        <p>
            @Model.Synopsis
        </p>
    </div>
@{
    await Html.RenderPartialAsync("_PartialDisplayMovieInfo");
}