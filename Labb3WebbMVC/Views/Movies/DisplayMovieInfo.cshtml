@model Labb3WebbMVC.Models.Movie

<br />
@if (Model.Title == "The Matrix")
{
    <iframe class="trailerFrame" src="https://www.youtube.com/embed/D4eJx-0g3Do" allow="accelerometer;" allowfullscreen></iframe>
    <div class="movieInfo">
        <h1>
            @Html.DisplayFor(modelItem => modelItem.Title)
            <span id="movieRating">Rating: @Html.DisplayFor(modelItem => modelItem.Rating)</span>
        </h1>
        <p>
            A computer hacker learns from mysterious rebels about the true nature of his reality and his role in the war against its controllers.
        </p>
    </div>
}
else
{
    <iframe class="trailerFrame" src="https://www.youtube.com/embed/KAOdjqyG37A" allow="accelerometer;" allowfullscreen></iframe>
    <div class="movieInfo">

        <h1>
            @Html.DisplayFor(modelItem => modelItem.Title)
            <span id="movieRating">Rating: @Html.DisplayFor(modelItem => modelItem.Rating)</span>
        </h1>
        <p>
            Wayward prince and heir to the Bhutan throne, is crowned King Pontus I after an alien attack robs the earth of all lions.<br />
            Now the young king must navigate palace politics, the lack of roars left behind, and the emotional strings of his past life as a russian hacker.<br /><br />
            Watch it now, blyat!<br />
            Rawr...
        </p>
    </div>
}
@{
    await Html.RenderPartialAsync("_PartialDisplayMovieInfo");
}