
@model IEnumerable<Labb3WebbMVC.Models.Movie>

<div class="border p-3 mt-3">
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="col-6">Start Time</th>
                <th>Salon</th>
                <th>Seats Left</th>
                <th></th>
                <th></th>
            </tr>
            @if (Model == null)
            {
                <tr>
                    <td>
                        No movies found.
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    @foreach (var show in item.Viewing)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => show.StartTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => show.Salon.Number)
                            </td>
                            <td>@Html.DisplayFor(modelItem => show.Salon.RemainingSeats)</td>
                            <td>
                                <a asp-action="DisplayPontus" asp-route-id="@item.Id" asp-controller="Movies" class="btn btn-success btn-sm">See Movie info</a>
                            </td>
                        </tr>
                    }
                }
            }
        </thead>
    </table>
</div>